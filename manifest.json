{
  "name": "DarkMode",
  "description": "Inverts the color to darkerize your browser contents",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["app/css/dark.css"],
      "js": ["app/src/injectCss.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_title": "DarkMode Options",
    "default_icon": "icon.png",
    "default_popup": "app/html/options.html"
  },
  "manifest_version": 2
}
